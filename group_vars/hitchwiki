  dumps: /var/www/dumps
  phpmyadmin: /usr/share/phpmyadmin
  state: /var/www/group_vars/all

self_signed_certs:
  - key: /etc/ssl/private/server.key
    cert: /etc/ssl/certs/server.crt

apache:
  vhosts:
    listen: "443 ssl http2"
    server_name: "{{ domain }}"
    root: "{{ dir.root }}"
    ssl_certificate: "{{ self_signed_certs.0.cert }}"
    ssl_certificate_key: "{{ self_signed_certs.0.key }}"
  user: www-data
  group: www-data

db_credentials: "-u {{ mediawiki.db.username }} -p{{ mediawiki.db.password }}"

